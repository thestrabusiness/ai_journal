<div class="mb-5 white-panel" id="<%= dom_id(core_value) %>">
  <div class="flex justify-between">
    <div class="mb-5 text-2xl">
      <%= core_value.name %>
    </div>

    <div class="flex">
      <%= link_to core_value_path(core_value),
        data: {
          "turbo-confirm": "Are you sure you want to delete this core value?",
          "turbo-method": :delete
        } do %>
        <%= icon "trash" %>
      <% end %>
    </div>
  </div>

  <p>
    <%= core_value.description %>
  </p>
</div>
