    <%= form_with model: chat_log,
      id: "#{dom_id(chat_log)}-form",
      class:"absolute bottom-5 right-5 left-5",
      method: :post,
      url: chat_log_entries_path(chat_log) do |form| %>
      <div class="flex">
        <%= form.text_field :content, class: "w-full rounded-lg border border-gray-300 p-2", placeholder: "Type your message here" %>
        <%= form.submit "Send", class: "ml-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
