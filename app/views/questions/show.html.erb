<div class="main-panel-container pr-1.5 h-screen mt-5 pb-5 relative minimal-scrollbar">
  <div class="white-panel mb-5">
    <div class="text-xl mb-5">
      Ask a question about yourself and relationships
    </div>
    <%= form_with model: @question, url: questions_path, method: :post do |form| %>
      <%= form.text_field :content,
        placeholder: "Type your question here",
        class: "rounded-md border-none focus:outline-none focus:ring-gray-300 w-full text-2xl p-0 mb-5"
      %>
    <%= form.submit "Submit", class: "submit-button" %>
  <% end %>
  </div>
  <div class="white-panel">
    <div class="text-xl mb-5">
      Previous Questions
    </div>
    <% @questions.each do |question| %>
      <div class="mb-5">
        <% question.entries_for_display.each.with_index do |entry, index| %>
          <div class="flex justify-between mb-2 <%= "text-lg font-bold" if index.zero? %>">
            <%= simple_format entry["content"] %>
            <% if index.zero? %>
              <%= link_to question_path(question),
                data: {
                  "turbo-confirm": "Are you sure you want to delete this entry?",
                  "turbo-method": :delete
                } do %>
                <i data-feather="trash" class="base-icon"></i>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
